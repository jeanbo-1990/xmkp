<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btn_select_address_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="2dip"
        android:clickable="true"
        android:background="@drawable/icon_clear"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/txt_select_address_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:text="你好啊阿斯顿发斯蒂芬"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/btn_select_address_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dip"
        
        android:layout_gravity="center_vertical"
        android:background="@drawable/redio_unchecked"
        android:contentDescription="@string/app_name" />

</LinearLayout>