<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_cardetail_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:background="@drawable/icon_clear"
            android:clickable="true"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_car_item_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:ellipsize="marquee"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_car_item_goodsMoney"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:ellipsize="marquee"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:textColor="@color/top_bg_color" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip" >

        <ImageView
            android:id="@+id/btn_cardetail_reduction"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_reduction_style"
            android:contentDescription="@string/app_name"
            android:padding="0dip"
            android:scaleType="fitXY"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtxt_cardetail_shopGoodsCount"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@android:color/white"
            android:padding="2dip"
            android:text="1"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/btn_cardetail_add"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_add_style"
            android:contentDescription="@string/app_name"
            android:padding="0dip"
            android:scaleType="fitXY"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>