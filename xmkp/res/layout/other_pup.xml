<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#cfcfcf"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.1dip"
        android:layout_marginLeft="0.1dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/top_menu_share"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:background="@drawable/menu_style"
            android:clickable="true" >

            <TextView
                android:id="@+id/textview_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:drawableLeft="@drawable/share"
                android:drawablePadding="5dip"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/top_share"
                android:textColor="#808590" />
        </LinearLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="wrap_content"
            android:layout_height="0.1dip"
            android:background="#cfcfcf" />

        <LinearLayout
            android:id="@+id/top_menu_myself"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:background="@drawable/menu_style"
            android:clickable="true" >

            <TextView
                android:id="@+id/textview_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:drawableLeft="@drawable/aboutus"
                android:drawablePadding="5dip"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/top_myself"
                android:textColor="#808590" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>